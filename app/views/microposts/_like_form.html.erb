<% unless current_user?(@user) %>
            
            <% if current_user.liking?(@micropost) %>
                <%= render 'microposts/unlike' %>
            <% else %>
                <%= render 'microposts/like' %>
            <% end %>
            <p id ="like_count_<%= @micropost.id%>"><%= @micropost.micropost_liking.count%> like</p>

<% end %>