<li id="micropost-<%= micropost.id %>", style="list-style-type: none;">
    <div class="card" style="width: 28rem;">
        <div class="card-body">
            <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
            <span class="card-title"><%= link_to micropost.user.name, micropost.user,style: "text-decoration: none" %></span>
            <p class="card-text"><%= micropost.content %></p>
            <%= image_tag micropost.image if micropost.image.attached? %>
            <% if micropost && micropost.created_at %>
            <p class="card-text"><small class="text-body-secondary">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</small></p>
            <%else%>
             <p class="card-text"><small class="text-body-secondary">Posted less than a minute ago.</small></p>
            <%end%>
            </div>
            <% @micropost = micropost%>
            <%if logged_in? %>
                <%=  render 'microposts/like_form' %>
            <%end%>
            <%if current_user ==  micropost.user%>
            <%= link_to 'Destroy', micropost,  class: 'btn btn-outline-danger', method: :delete,
                    data: { "turbo-method": :delete, confirm: 'Are you sure?' } %>
            <%end%>
    </div>
</li>
<br>