<%= javascript_include_tag "application", "data-turbo-track": "reload"%>
<p id="notice"><%= notice %></p>
  <h1>Users</h1>
  <%= form_with url: search_users_path, method: :get, class: "d-flex", role: "search" do %>
    <%= text_field_tag :query, nil, class: "form-control me-2", placeholder: (@query.present? ? @query : "Search name or email"), aria: { label: "Search" } %>
    <%= submit_tag "Search", class: "btn btn-outline-success" %>
  <% end %>  
  <br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete,
                    data: { "turbo-method": :delete, confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>

  <%= link_to 'New', new_user_path, class:'btn btn-primary'%>
