<% provide(:title, @title) %>
<div class="row justify-content-around">
    <div class="col-4">
        <section class="user_info">
            <%= gravatar_for @user %>
            <h1><%= @user.name %></h1>
            <span><%= link_to "view my profile", @user %></span>
            <br>
            <span><b>Microposts:</b> <%= @user.microposts.count %></span>
            <%= render 'shared/stats' %>
            </section>
    </div>
    <div class="col-4">
            <h4><%= flash[:info] %></h4>
            <% if @users.any? %>
                <% @users.each do |user| %>
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <%= link_to gravatar_for(user, size: 30), user %>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%=user.name%></h5>
                                    <p class="card-text"><b>Microposts:</b> <%= user.microposts.count %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
    </div>
</div>
